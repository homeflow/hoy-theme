<ul class='thumbnails'>
	{%for property in properties %}
		<li>
			<div class="thumbnail row">
				<a href="{{ property | url_for_property }}">
					<img src="{{ property.photos.first | url_for_property_asset : '260x180'}}" alt="">
				</a>
				<div class='span4'>
					<a href="{{ property | url_for_property }}">
					<h4>{{property.display_address}}</h4>
					</a>
					<p>{{property.price}}</p>
					<p>{{property.short_description | truncate : 150}}</p>
					<p><a href="{{ property | url_for_property }}">Full details</a> or call the <a href="{{ property.agency.branch | url_for_branch : property.agency.branch }}">{{property.agency.branch_name}}>{{ branch.name }} office</a> on {% if branch and branch.default_vox_number %}{{branch.default_vox_number}}{% endif%}</p>
				</div>
			</div>
		</li>
	{%endfor%}
</ul>


<a href="{{ property.agency.branch | url_for_branch : property.agency }}">{{property.agency.agency_name}}</a> 