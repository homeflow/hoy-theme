{% if pagination.total_count != 0 %}
<ul class='thumbnails'>
	{%for property in properties %}
		<li>
			<div class="thumbnail row">
				<a href="{{ property | url_for_property }}">
					<img src="{{ property.photos.first | url_for_property_asset : '260x180'}}" alt="">
				</a>
				<div class='span4'>
					<h4>
						<a href="{{ property | url_for_property }}">
							{{property.display_address}}
						</a>
					</h4>
					<p>{{property.price}}</p>
					<p>{{property.short_description | truncate : 150}}</p>
					<p>
						<a href="{{property | url_for_property}}">Full details</a> |
						<a id="shortlist_link_{{ property.property_id }}" href="#" onclick="Ctesius.Actions.addSavedProperty({{property.property_id}}); return false;">Save to shortlist</a> or call us on
						{% if property.vox_number %} {{property.vox_number}} {%endif%}
						{% if property.comment %}<div class="quote">&ldquo;{{ property.comment }}&rdquo;</div>{% endif %}
					</p>
				</div>
			</div>
		</li>
	{%endfor%}
</ul>
{% else %}
<h4>Sorry, we couldn't find any properties for this search.</h4>
<p>Try refining or changing your search using the form on the right.</p>
{% endif %}
