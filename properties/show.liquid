<div class="blue-banner">
	<div class="container">
		<div class="col-lg-7">
			<h3>{{property.display_address}}</h3>
			<h4>{{property.bedrooms}} bedrooms</h4>
		</div>
		<div class="col-lg-5">
			<h3>{{property.price}}</h3>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-8">
			<a href="#"><small><< Back to search</small></a>
			<div class="photo-slider">
				<img src="{{property.photos.first | url_for_property_asset : '638x425'}}" alt="">
				<div class="photo-reel">
					<div class="photo-reel-dirnav">
						<a href="#" class="prev">Prev</a>
						<a href="#" class="next">Next</a>
					</div>
					{% for photo in property.photos %}
						<img src="{{photo | url_for_property_asset : "110x74" }}">
                    {% endfor %}
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<h4>{{ branch.name }} office</h4>
			<h4>Tel: 01392 8385853</h4>
			{% unless branch.staff_profiles == empty %} 
			{% assign profile = branch.staff_profiles.first %}
				<div class="staff-property">
					<a href="{{profile | url_for_staff_member}}">
						<img src="{{profile.avatar | url_for_staff_profile_avatar: "105x"}}">
					</a>
					<p>Talk to {{profile.name}} about this property or fill out the form below.</p>
				</div>
			{% else %}
				<p>To send us a message about this property, fill out the form below.</p>
			{% endunless%}
			<form action="/properties/{{property.property_id}}/{{property.primary_channel}}/leads" id="contact_form" class="propery-form" method="post">
				<input name="lead_client[first_name]" type="text" placeholder="First Name">
				<input name="lead_client[last_name]" type="text" placeholder="Last Name">
				<input name="lead_client[email]" type="text" placeholder="Email">
				<input name="lead_client[tel_home]" type="text" placeholder="Telephone">
				<textarea name="lead[message]" placeholder="Message"></textarea>
				<input type="submit" value="Send message" class="btn">
			</form>
		</div>
	</div>
</div>
<div class="container">
	<div class="col-lg-8">
		{{property.description}}
	</div>
	<div class="col-lg-4">
	
	</div>
</div>