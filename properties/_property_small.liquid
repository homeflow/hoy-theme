<div id="property_{{property.property_id}}" class="property-small">
	<div class="row">
		<a href="{{property | url_for_property}}">
			<img src="{{property.photos.first | url_for_property_asset:"176x133"}}">
		</a>
		<a href="{{property | url_for_property}}">{{property.display_address | truncate : 60}}</a>
		<p>
			{{property.price}} 
			<span class="feetext" style="color:{{theme_preferences.custom_colour_4 }};">
	       		{{property.lettings_fee_text}}
	     	</span>
		</p>
		<p>
			{{property.short_description | truncate:185}}
		</p>
		<p>
			<a href="{{property | url_for_property}}">Full details</a> |
			<a id="shortlist_link_{{ property.property_id }}" href="#" onclick="Ctesius.Actions.addSavedProperty({{property.property_id}}); return false;">Save to shortlist</a> or call us on
			{% if property.vox_number %}on {{property.vox_number}} {%endif%}
			{% if property.comment %}<div class="quote">&ldquo;{{ property.comment }}&rdquo;</div>{% endif %}
		</p>
	</div>
</div>
<hr />
