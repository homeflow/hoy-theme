<div class="pagination-bottom">
	<ul>
		<li {% unless pagination.has_prev_page %}class="disabled"{%endunless%}><a href="{{pagination.previous_page_link}}">Previous</a></li>
		{% for_pagination pagination previous: 4 after :4 %}
			<li {% if pagination_item.page_number == pagination.current_page %} class='active' {% endif %}><a href="{{pagination_item.link}}">{{pagination_item.page_number}}</a> 
		{% endfor_pagination %}
		<li {% unless pagination.has_next_page %}class="disabled"{%endunless%}><a href="{{pagination.next_page_link}}">Next</a></li>
	</ul>
</div>