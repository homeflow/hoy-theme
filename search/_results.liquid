{% push_to_header %}
	<div class="col-lg-12">
		{% if location.name %}
			<h3> {{current_channel.dictionary.general_collective | capitalize}}  {{current_channel.dictionary.preposition}} in 
				<span> 
					{{ location.name }}, 
					{{ county.name }} 
				</span> 
			</h3>
		{% else %}
			<h3>
				All properties {{current_channel.dictionary.preposition}}
			</h3>
		{% endif %}
		<div class='togglable_area' id='togglable_list'>
			{% include 'common_chunks/list_nav' %}
		</div>
		<div class='togglable_area hidden' id='togglable_map'>
			{% include 'properties/pagination_for_map' %}
		</div>
	</div>
{% endpush_to_header %}

<div class='togglable_area' id='togglable_list'>
	{% for property in properties %}
		{% include "properties/property_small" %}
	{% endfor %}

	{% include 'common_chunks/bottom_list_nav' %}
</div>
<div class='togglable_area hidden' id='togglable_map'>
	<div id='draggable_map_view'></div>
</div>

<script>
	$(document).ready(function(){
		$(".inline").colorbox({inline:true, width:"450px"});
	});
</script>