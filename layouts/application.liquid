
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Hoy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

	{{ "application" | javascript_include_tag }}
	{{ "application" | stylesheet_link_tag }}
	{{ "bootstrap" | theme_stylesheet_link_tag }}
	{{ "hoy" | theme_stylesheet_link_tag }}
	{{ "properties" | theme_stylesheet_link_tag }}
	{{ "forms" | theme_stylesheet_link_tag }}
	{{ "font-awesome" | stylesheet_link_tag }}
		
	<script>
		$(window).load(function(){
			$('.gallery').cycle({ 
				fx:     'fade',
				timeout:   5000,
				pager:    '#pager',
				pagerAnchorBuilder: function(idx, slide){
				return '<a href="#"></a>';
				},
				before:    function(idx, slide){
				var details1 = $(this).attr('data-details1');
				var details2 = $(this).attr('data-details2');
				var details3 = $(this).attr('data-details3');
				var id = $(this).attr('data-id');

				$('.gallery-details h2.details a').html(details1)
				$('.gallery-details h2.details a').attr('href', details3);
				$('.gallery-details p').html(details2);
				$('.gallery-details h3.sub_header a').attr('href', details3);
				},
				activePagerClass: 's'
			});
		});
	</script>
  </head>
  <body class="{{page.controller_name}} {{page.action_name}}">
    {% include 'layouts/js_templates' %}
	<div class="navbar navbar-inverse">
		<div class="container">
			<div class="col-lg-4">
				<a href="http://xradarhomes-holding.agent.staging.homeflow.co.uk/">
					<img src="{{'hoy.png' | theme_image_url}}" class="logo1">
				</a>
			</div>
			<div class="col-lg-8">
				<div id="user_micro_view"></div>
				<div class="nav1">
					|
					{% assign primary_menu = 'primary' | site_menu %}
						{% for menu_item in primary_menu.items %}
						  <a class="navigation {{menu_item.dom_id}}" data-id="{{menu_item.dom_id}}" href="{{ menu_item.url }}">{{ menu_item.name }}</a> |
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
    {{ content_for_layout }}
    <footer>
      	<div class="bottom">
			<div class="container">
				{% content_block site_footer %}
					{% if content_block == 'No content chunk found: site_footer' %}
						<p>Couldn't find footer chunk.</p>
					{% else %}
						{{ content_block }}
					{% endif %}
				{% endcontent_block %}
			</div>
		</div>
		<div class="footer">
			<div class="container">
				<p>
					|{% assign footer_menu = 'footer' | site_menu %}
						{% for menu_item in footer_menu.items %}
						  <a class="navigation {{menu_item.dom_id}}" data-id="{{menu_item.dom_id}}" href="{{ menu_item.url }}">{{ menu_item.name }}</a>|
					{% endfor %}
					<span style="color:#ffffff;padding: 0px 10px 0px 10px;">Copyright &copy; {{ agency.name }}</span>
				</p>
			</div>
		</div>
    </footer>
    <script type="text/javascript">
	      
	
	$(document).ready(function(){ 
	Ctesius.registerEvent('redirection_flash_ready', function(message, type){
	   	 	var mess = '<div class="alert alert-'+type+'"><a class="close" data-dismiss="alert">Ã—</a>'+message+'</div>'
	   	 	$('#alert_location').html(mess)

	  	});        
	
	Ctesius.registerEvent('saved_property_view_rendered', 
			function(saved_property){
				$('#saved_properties_view').removeClass("hidden");
				$("#add_to_shortlist_"+saved_property.id).html("Remove from Shortlist");
		});
        Ctesius.addConfig('enable_user_history',  true);
	Ctesius.init();
		
      });
    </script>
  </body>
</html>
