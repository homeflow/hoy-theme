<div class="accent-strip">
    <div class="container">
        <div class="col-lg-12"><div id='alert_location'></div></div>
        <div class="col-lg-12"><div id='form_error'></div></div>
    </div>
</div>
<div class="container">
    <div class="col-lg-12">
        <h3>Request a free valuation</h3>      
        <form action="/leads" method="post" id="contact_form" class="request-valuation">
            <div class="row1 control-group">
                <label for="firstname">First name</label>
                <input id="firstname" class="required" name="lead_client[first_name]" type="text">
                <label for="surname">Last name</label>
                <input id="surname" class="required" name="lead_client[last_name]" type="text">
            </div>
            <div class="control-group">
                <label for="email">Email</label>
                <input id="email" class="required" name="lead_client[email]" type="email">
            </div>
            <div class="control-group">  
                <label for="telephone">Telephone</label>
                <input id="telephone" name="lead_client[tel_home]" type="text">
            </div>
            <div class="control-group">
                <label for="is_sales_valuation">Valuation</label>
                <span>For sale</span>
                <input id="is_sales_valuation" name="lead[valuation_reason]" type="checkbox" value="sales">
                <span>To let</span>
                <input id="is_lettings_valuation" name="lead[valuation_reason]" type="checkbox" value="lettings">
            </div>
            <div class="control-group">
                <label for="message">Message</label>
                <textarea id="message" name="lead[message]" rows="5"></textarea>
            </div>
            <input type="hidden" name="lead[is_valuation_request]" value="1"/>
            <div class="submits">
                <input type="submit" value="Submit" class="btn">
                    <div class="terms_form">
                    <p>By submitting this form, you agree to our <a href="/pages/terms-of-use">terms.</a></p>
                </div> 
            </div>
        </form>                
    </div>
</div>
 