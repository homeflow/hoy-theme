{% if staff_member.avatar %}
	<a href="{{ staff_member | url_for_staff_member }}">
		<img src="{{ staff_member.avatar | url_for_staff_profile_avatar : "82x82" }}" class="mainimg">
	</a>
{% else %}
	<a href="{{ staff_member | url_for_staff_member }}">
		<img src="{{ 'siloutte.jpg' | theme_image_url}}" width="82" height="82" style="width:82px;height:82px;" class="mainimg">
	</a>
{% endif %}
<a href="{{ staff_member | url_for_staff_member : staff_member.agency }}">{{staff_member.name}}</a>
{{staff_member.job_title }}
{% unless replace_agency_with_social_icons %}
	<a href="{{ staff_member.branch | url_for_branch : staff_member.agency}}">{{ staff_member.agency.name }}</a>
{% endunless %}
{{staff_member.branch.contact_telephone}}
{% if replace_agency_with_social_icons %}
	{% if staff_member.agency.agency_portal_preferences.enable_social_media_links %} 
		{% if staff_member.has_social_links %}
			<div class="social_icons">
				{% if staff_member.facebook_uri %}<a href="{{staff_member.facebook_uri}}" target="_blank"><img src="{{ 'icon-facebook' | theme_image_url }}" width="20" height="20" style='width:20px;height:20px;'></a>{%endif%}
				{% if staff_member.twitter_uri %}<a href="{{staff_member.twitter_uri}}" target="_blank"><img src="{{ 'icon-twitter' | theme_image_url }}" width="20" height="20" style='width:20px;height:20px;'></a>{%endif%}
				{% if staff_member.linkedin_uri %}<a href="{{staff_member.linkedin_uri}}" target="_blank"><img src="{{ 'icon-linkedin' | theme_image_url }}" width="20" height="20" style='width:20px;height:20px;'></a>{% endif %}
				{% if staff_member.googleplus_uri %}<a href="{{staff_member.googleplus_uri}}" target="_blank"><img src="{{ 'icon-google-plus' | theme_image_url }}" width="20" height="20" style='width:20px;height:20px;' ></a>{%endif%}
			</div>
		{% endif %}
	{% endif %}
{% endif %}