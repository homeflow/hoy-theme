<form action="/properties/{{property.property_id}}/{{property.primary_channel}}/leads" class="contact-form" method="post">
	<input name="lead_client[first_name]" type="text" class="required" placeholder="First Name"><span class="asterisk">*</span>
	<input name="lead_client[last_name]" type="text" class="required" placeholder="Last Name"><span class="asterisk">*</span>
	<input name="lead_client[email]" type="text" class="required email" placeholder="Email"><span class="asterisk">*</span>
	<input name="lead_client[tel_home]" type="text" placeholder="Telephone">
	<textarea name="lead[message]" placeholder="Message"></textarea>
	<input type="submit" value="Send message" class="btn">
</form>
