<div class="blue-banner">
	<div class="container">
		<div class="col-lg-12">
			<div id='alert_location'></div>
			<h3>{{staff_member.name}}</h3>
			<h4>{% unless staff_member.job_title == '' %}{{staff_member.job_title}}, {% endunless %}{{branch.name}} office</h4>
		</div>
	</div>
</div>
<div class="container">
	<div class="col-lg-8">
		{% if staff_member.avatar %}
			<img id="profile-image" src="{{ staff_member.avatar | url_for_staff_profile_avatar : "_x200" }}" class="avatar" />
		{% else %}
			<img id="profile-image" src="http://www.homeflow.co.uk/global/images/admin/no_avatar.jpg" class="avatar" />
		{% endif %}
		<p>{{staff_member.long_bio | strip_links}}</p>
	</div>
	<div class="col-lg-4">
		<h4><a href="{{branch | url_for_branch}}">{{ branch.name }} office</a></h4>
		<h4>{% if branch and branch.default_vox_number %}Tel: {{branch.default_vox_number}}{% endif%}</h4>
		<p>To send me a message, fill<br /> out the form below.</p>
		{% include 'sidebar_blocks/staff_contact_form' %}
		<div class="terms_form">
			By submitting this form, you agree to our <a href="/pages/terms-of-use">terms.</a>
		</div>
	</div>
</div>



