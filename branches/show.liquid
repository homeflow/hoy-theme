<div class="blue-banner">
	<div class="container">
		<div class="col-lg-12">
			{% include 'layouts/h_search_form' %}
		</div>
	</div>
</div>
<div class="container">
    <div class="col-lg-8">
        <h3>{{branch.name}} Office</h3>
		<strong>
			{{ branch.address }}
		</strong>
		<p>
			{% if branch.photo %}
				<img src="{{branch.photo | url_for_generic_image}}" alt="{{branch.name}} office" style="width:223px;float:left;margin:15px 15px 0 0" />
			{% endif %}
			{{branch.description}}
		</p>
    </div>
	<div class="col-lg-4">
		<div class="office-map" id="map"></div>
		{% assign staff_list = branch.staff_profiles %}
		{% include 'sidebar_blocks/staff_list'%}
	</div>
</div>















