<div class="blue-banner">
	<div class="container">
		<div class="col-lg-12">
			{% include 'layouts/h_search_form' %}
		</div>
	</div>
</div>
<div class="container">
    <div class="col-lg-8">
        <h3>{{branch.name}} Office</h3>
		<strong>
			{{ branch.address }}
		</strong>
		<p>
			{% if branch.photo %}
				<img src="{{branch.photo | url_for_generic_image}}" alt="{{branch.name}} office" style="width:223px;float:left;margin:15px 15px 0 0;border: 1px solid #dddddd;" />
			{% endif %}
			{{branch.description}}
			<hr />
		</p>
		{% if branch.recent_sales_properties != empty%}
			<h4>Latest sale listings for {{branch.name}}</h4>   
			<hr />
			{%for property in branch.recent_sales_properties limit:2 %}
				{% include "properties/property_small" %}
			{%endfor%}
      {% endif %}
    </div>
	<div class="col-lg-4">
		<h4>Find us on a map</h4>
		<div class="office-map" id="branch_map"></div>
		{% assign staff_list = branch.staff_profiles %}
		{% include 'sidebar_blocks/staff_list'%}
		<h4>Send us a message</h4>
		<form action="" id="contact_form" class="contact-form" method="post">
			<input name="lead_client[first_name]" type="text" placeholder="First Name">
			<input name="lead_client[last_name]" type="text" placeholder="Last Name">
			<input name="lead_client[email]" type="text" placeholder="Email">
			<input name="lead_client[tel_home]" type="text" placeholder="Telephone">
			<textarea name="lead[message]" placeholder="Message"></textarea>
			<input type="submit" value="Send message" class="btn">
		</form>
	</div>
</div>















