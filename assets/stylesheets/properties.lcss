	.thumbnails { 
		margin-left:0;
		clear:both;
		padding-top:10px;
	}

	.togglable_area {
		text-align:center;
	}

	.pagination-right {
		text-align:center;
	}

	.nav {
		float:left;
		margin-top:4px;
	}

	.nav-tabs {
		border:none;
	}

	.pagination {
		float:left;
		padding-left:8px;
		margin:0;
	}

	.nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
		border:none;
		padding:0 0 0 0;
		margin:0;
		background-color:none;
		background:none;
	}

	.nav-tabs>.active>a, .nav-tabs>.active>a:hover {
		border:none;
	}
	
	.nav-tabs > li > a {
		padding:0 0 0 0;
		margin:0;
	}
	
	.nav-tabs > li {
		padding: 0 5px 0 5px;
	}